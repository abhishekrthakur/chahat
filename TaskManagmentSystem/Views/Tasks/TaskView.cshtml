
<div class="detail-page">
    <h2>Details Page</h2>
    <div class="details">
        <h3>Title: Example Title</h3>
        <p>Description: This is an example description of the item.</p>
    </div>

    <div class="accordion">
        <div class="accordion-item">
            <button class="accordion-button" onclick="toggleAccordion('attachments')">Attachments</button>
            <div id="attachments" class="accordion-content">
                <ul>
                    <li><a href="#">Attachment 1</a></li>
                    <li><a href="#">Attachment 2</a></li>
                </ul>
            </div>
        </div>

        <div class="accordion-item">
            <button class="accordion-button" onclick="toggleAccordion('notes')">Notes</button>
            <div id="notes" class="accordion-content">
                <ul>
                    <li>Note 1: Example note content.</li>
                    <li>Note 2: Another example note content.</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="add-note">
        <h3>Add a Note</h3>
        <textarea id="newNote" rows="4" cols="50"></textarea>
        <button onclick="addNote()">Add Note</button>
    </div>

    <div class="status-dropdown">
        <h3>Status</h3>
        <select id="status">
            <option value="open">Open</option>
            <option value="inProgress">In Progress</option>
            <option value="closed">Closed</option>
        </select>
    </div>
</div>

<script>
    function toggleAccordion(id) {
        var content = document.getElementById(id);
        var button = content.previousElementSibling;
        if (content.style.display === "block") {
            content.style.display = "none";
            button.classList.remove('active');
        } else {
            content.style.display = "block";
            button.classList.add('active');
        }
    }
</script>