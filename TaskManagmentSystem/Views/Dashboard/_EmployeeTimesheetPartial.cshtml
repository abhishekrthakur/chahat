@model TaskManagmentSystem.DTO.TaskListDTO
@inject IHttpContextAccessor HttpContextAccessor

<h2>Employee Timesheet</h2>

<form method="post" asp-controller="Dashboard" asp-action="SubmitTimesheet">
    <div class="row mb-3">
        <!-- Timesheet Date -->
        <div class="col-md-4">
            <label for="TimesheetDate">Timesheet Date</label>
            <input type="date" id="TimesheetDate" name="TimesheetDate" class="form-control"
                   value="@DateTime.Now.ToString("yyyy-MM-dd")" />
        </div>

        <!-- Timesheet Title -->
        <div class="col-md-4">
            <label for="TimesheetTitle">Timesheet Title</label>
            <input type="text" id="TimesheetTitle" name="TimesheetTitle" class="form-control" placeholder="Enter title" />
        </div>

        <!-- Send CC To -->
        <div class="col-md-4">
            <label asp-for="Members">Send CC To</label>
            <select asp-for="Members"
                    asp-items="@(new MultiSelectList(Model.Members, "UserId", "Username"))"
                    class="form-control select2"
                    multiple="multiple">
            </select>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
<script>
    $(document).ready(function () {
        $('.select2').select2({
            placeholder: "Select members...",
            allowClear: true,
            width: '100%'
        });
    });
</script>

